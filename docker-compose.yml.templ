version: '3.5'

networks:
  akamas-ext:
    external:
      name: akamas

services:
  akamas-webhook:
    image: akamaslabs/integrations/keptn-webhook:SERVICE_VERSION
    container_name: keptn-webhook
    networks:
      - akamas-ext
    volumes:
      - ../certs:/certs:ro
    environment:
      - KEPTN_URL
      - KEPTN_TOKEN
    command: gunicorn webhook:app --bind 0.0.0.0:6000 --certfile=/certs/akamas.pem --keyfile=/certs/akamas.key
    ports:
      - 6000:6000
